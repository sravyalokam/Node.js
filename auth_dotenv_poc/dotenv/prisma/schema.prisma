generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  refreshToken String?
  createdAt DateTime @default(now())
}

model microsoftUser {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String?  // nullable
  microsoftId   String?  @unique
  refreshToken  String?
  role          String @default("user")
  createdAt     DateTime @default(now())
}

